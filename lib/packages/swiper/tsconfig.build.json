{
	"compilerOptions": {
		"target": "es2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"declaration": true,
		"strict": true,
		"incremental": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"tsBuildInfoFile": "./dist/.tsbuildinfo",
		"composite": true,
		"isolatedModules": true,
		"jsx": "react-jsx"
	},
	"exclude": ["dist/**", "src/stories/**"]
}
