{
	"exclude": ["**/*.test.ts", "**/*.stub.ts", "node_modules", "dist"],
	"compilerOptions": {
		"baseUrl": "./",
		"esModuleInterop": true,

		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"paths": {
			"@gorny/*": ["./lib/packages/*/"]
		},
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["src", "lib"],
	"references": [
		{ "path": "./tsconfig.node.json" },
		{ "path": "./lib/packages/swiper/tsconfig.json" },
		{
			"path": "./lib/packages/choose/tsconfig.json"
		}
	]
}
